extends ../layout

block content
  h2.mb-4 Editar Repartidor

  a.btn.btn-secondary.mb-3.ms-2(href="/riders") ← Volver al menú
  
  if error
    .alert.alert-danger #{error}

  if rider
    hr
    form(method="post" action=`/riders/update/${rider.riderId}`)
      .mb-3
        label.form-label(for="name") Nombre Completo
        input.form-control(type="text", name="name", id="name", value=rider.name required)
      .mb-3
        label.form-label(for="dni") DNI
        input.form-control(type="text", name="dni", id="dni", value=rider.dni required)
      .mb-3
        label.form-label(for="email") Email
        input.form-control(type="email", name="email", id="email", value=rider.email required)
      .mb-3
        label.form-label(for="phone") Teléfono
        input.form-control(type="text", name="phone", id="phone", value=rider.phone required)
      
      .mb-3
        label.form-label(for="vehicle") Vehículo
        select.form-select(name="vehicle", id="vehicle", required)
          option(value="Moto" selected=rider.vehicle === 'Moto') Moto
          option(value="Bici" selected=rider.vehicle === 'Bici') Bici
          option(value="Auto" selected=rider.vehicle === 'Auto') Auto
      
      .mb-3
        label.form-label(for="patente") Patente
        input.form-control(type="text", name="patente", id="patente", value=rider.patente)

      .mb-3
        label.form-label(for="state") Estado (Disponible / Ocupado)
        select.form-select(name="state", id="state", required)
          option(value="Disponible" selected=rider.state === 'Disponible') Disponible
          option(value="Ocupado" selected=rider.state === 'Ocupado') Ocupado
      
      button.btn.btn-success(type="submit") Guardar cambios
      a.btn.btn-secondary.ms-2(href="/riders") Cancelar
  else
    p.text-warning No se encontró el repartidor para editar.