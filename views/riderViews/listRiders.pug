extends ../layout

block content
  h2.mb-4 Listado de Repartidores
  
  a.btn.btn-secondary.mb-3.ms-2(href="/riders") ‚Üê Volver al men√∫

  if riders && riders.length
    table.table.table-striped.table-hover
      thead.table-dark
        tr
          th ID
          th Nombre
          th DNI
          th Email
          th Tel√©fono
          th Veh√≠culo
          th Patente
          th Estado
          if query.action !== 'edit' && query.action !== 'delete'
             th Acciones
          else if query.action === 'edit'
             th Seleccionar para Editar
          else if query.action === 'delete'
             th Seleccionar para Eliminar
      tbody
        each rider in riders
          tr
            td= rider.riderId
            if query.action === 'edit'
              td 
                a(href=`/riders/update?id=${rider.riderId}`)= rider.name
            else
              td= rider.name
            td= rider.dni
            td= rider.email
            td= rider.phone
            td= rider.vehicle
            td= rider.patente
            td= rider.state
            if query.action !== 'edit' && query.action !== 'delete'
               td
                 a.btn.btn-sm.btn(style="background-color:#343a40; color:white; border:none;", href=`/riders/update?id=${rider.riderId}`) ‚úèÔ∏è
                 form(action=`/riders/delete/${rider.riderId}?_method=DELETE`, method="POST", style="display:inline")
                   button(type="submit", class="btn btn-sm btn-danger ms-2") üóëÔ∏è
            else if query.action === 'edit'
               td
                 a.btn.btn-sm.btn-primary(href=`/riders/update?id=${rider.riderId}`) Editar este repartidor
            else if query.action === 'delete'
               td
                 a.btn.btn-sm.btn-danger(href=`/riders/delete?id=${rider.riderId}`) Eliminar este repartidor
  else
    p.text-muted No hay repartidores registrados a√∫n.