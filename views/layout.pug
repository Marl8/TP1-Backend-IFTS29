doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    style.
      html, body {
        height: 100%;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: #f8f9fa;
        font-family: Arial, sans-serif;
      }
      .card {
        height: 170px;
        max-width: 350px;
        border-radius: 15px;
        transition: transform 0.2s;
        word-wrap: break-word;
        overflow-wrap: break-word;
      }
      .card.fluid{
        height: auto;
        max-width: 600px; 
        margin: 0 auto;
      }
      .card:hover {
        transform: scale(1.05);
      }
      .card-body{
        display: flex;
        flex-direction: column;
      }
      .mt-auto{
        margin-top: auto;
      }
      .header {
        background: #343a40;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 0 0 20px 20px;
      }
      main{
        flex: 1;
      }
      .footer {
        background: #343a40;
        color: white;
        border-radius: 20px 20px 0 0;
      }
      .footer a {
        color: #ffc107;
        text-decoration: none;
      }
      .footer a:hover {
        text-decoration: underline;
      }
      .footer p {
        margin: 0;
      }
  body
