extends ../layout

block content
  h2.mb-5.text-center Gestión de Menú

  a.btn.btn-secondary.mb-3.ms-2(href="/") ← Volver al Menú

  if query.success
    script.
      if ('!{query.success}' === 'eliminado') {
          alert('¡Pedido eliminado con éxito!');
      } else {
          alert('¡Pedido creado con éxito!');
      }
  if query.error
    .alert.alert-danger Error: !{query.error}

  .d-flex.flex-column.align-items-center.g-3
    a.btn.btn-crud.mb-3.w-50(href= "/menuItems/add") 
      i.bi.bi-plus-lg
      | Agregar Item del Menú
    a.btn.btn-crud.mb-3.w-50(href= "/menuItems/list")
      i.bi.bi-clipboard-data
      | Listar Items
    a.btn.btn-crud.mb-3.w-50(href= "/menuItems/list?action=edit") 
      i.bi.bi-pencil-fill
      | Editar Item
    a.btn.btn-crud.mb-3.w-50(href= "/menuItems/list?action=delete")
      i.bi.bi-trash
      | Eliminar Item